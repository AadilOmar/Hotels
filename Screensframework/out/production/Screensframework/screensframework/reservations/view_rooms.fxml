<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import com.sun.javafx.scene.control.skin.TableColumnHeader?>
<GridPane alignment="CENTER" hgap="10.0" vgap="10.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" fx:controller="screensframework.reservations.ReservationController">

    <Text text="VIEW ROOMS" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="0" />
    <TableView GridPane.columnIndex="0" fx:id="all_rooms_table" GridPane.columnSpan="6" GridPane.rowIndex="2">
        <columns>
            <TableColumn editable="false" maxWidth="80.0" prefWidth="50.0" text="Room No." />
            <TableColumn editable="false" maxWidth="200.0" prefWidth="180.0" text="Room Category" />
            <TableColumn editable="false" maxWidth="80.0" prefWidth="50.0" text="# people allowed" />
            <TableColumn editable="false" maxWidth="200.0" prefWidth="180.0" text="Cost/ day" />
            <TableColumn editable="false" maxWidth="80.0" prefWidth="50.0" text="Cost of ex bed/ day" />
            <TableColumn editable="false" maxWidth="200.0" prefWidth="180.0" text="Select Room" />
        </columns>

    </TableView>

    <HBox alignment="BOTTOM_RIGHT" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="7">
        <Button onAction="#checkDetails" text="Check Details" />
    </HBox>

</GridPane>
