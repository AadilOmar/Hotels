<?xml version="1.0" encoding="UTF-8"?>
<?import java.lang.*?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="CENTER" hgap="10.0" vgap="10.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" fx:controller="screensframework.payments.PaymentsController">

    <Text text="ADD CARD" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="0" />

    <Label text="Name on Card:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <TextField
            GridPane.columnIndex="1" GridPane.rowIndex="0" fx:id="card_name"/>

    <Label text="Card Number:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField
            GridPane.columnIndex="1" GridPane.rowIndex="1" fx:id="card_number"/>

    <Label text="Expiration Date(m/yr):" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <TextField
            GridPane.columnIndex="1" GridPane.rowIndex="2" fx:id="exp_date"/>

    <Label text="CCV:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <TextField
            GridPane.columnIndex="1" GridPane.rowIndex="3" fx:id="ccv"/>

    <HBox alignment="BOTTOM_RIGHT" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="7">
        <Button onAction="#save" text="Save" />
    </HBox>

    <Text text="DELETE CARD" GridPane.columnIndex="5" GridPane.rowIndex="0" />

    <Label text="Use Card:" GridPane.columnIndex="5" GridPane.rowIndex="1" />
    <SplitMenuButton mnemonicParsing="false" text="card" GridPane.columnIndex="6" GridPane.rowIndex="1">
        <items>
            <MenuItem mnemonicParsing="false" text="1002" />
            <MenuItem mnemonicParsing="false" text="4039" />
        </items>
    </SplitMenuButton>

    <HBox alignment="BOTTOM_RIGHT" spacing="10.0" GridPane.columnIndex="5" GridPane.rowIndex="7">
        <Button onAction="#delete" text="Delete" />
    </HBox>

</GridPane>
