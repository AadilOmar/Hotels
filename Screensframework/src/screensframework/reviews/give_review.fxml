<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="CENTER" hgap="10.0" vgap="10.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" >

    <Text text="GIVE REVIEW" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="0" />

    <SplitMenuButton mnemonicParsing="false" text="Hotel Location" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="1">
        <items>
            <MenuItem mnemonicParsing="false" text="Atlanta" />
            <MenuItem mnemonicParsing="false" text="Charlotte" />
            <MenuItem mnemonicParsing="false" text="Savannah" />
            <MenuItem mnemonicParsing="false" text="Orlando" />
            <MenuItem mnemonicParsing="false" text="Miami" />
        </items>
    </SplitMenuButton>

    <SplitMenuButton mnemonicParsing="false" text="RATING" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="2">
        <items>
            <MenuItem mnemonicParsing="false" text="Excellent" />
            <MenuItem mnemonicParsing="false" text="Good" />
            <MenuItem mnemonicParsing="false" text="Neutral" />
            <MenuItem mnemonicParsing="false" text="Bad" />
            <MenuItem mnemonicParsing="false" text="Very Bad" />
        </items>
    </SplitMenuButton>

    <Label text="Comment" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <TextField
            GridPane.columnIndex="1" GridPane.rowIndex="3" fx:id="comment"/>

    <HBox  alignment="BOTTOM_RIGHT" spacing="10.0" GridPane.columnIndex="2" GridPane.rowIndex="4">
        <Button onAction="#submitReview" text="Submit" />
    </HBox>


    <HBox  alignment="BOTTOM_LEFT" spacing="10.0" GridPane.columnIndex="0" GridPane.rowIndex="5">
        <Button onAction="#back" text="Back" />
    </HBox>

</GridPane>
